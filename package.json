{
  "name": "climate",
  "version": "1.0.0",
  "description": "climate website (climateincorporated.com)",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && run-p build:*",
    "build:conf": "copyfiles --flat src/conf/* dist/",
    "build:css": "npm run css:lint && npm run css:scss && npm run copy:css && npm run css:postcss",
    "build:html": "posthtml -c posthtml.json",
    "build:images": "imagemin src/img/**/* --out-dir=dist/img",
    "build:js": "webpack --mode=production && npm run copy:js",
    "build:txt": "npm run copy:txt",
    "clean": "rm -Rf dist/*",
    "copy:css": "copyfiles --flat src/css/* dist/css",
    "copy:js": "copyfiles --flat src/js/**/* dist/js",
    "copy:txt": "copyfiles --flat src/txt/lyrics/* dist/lyrics",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "css:scss": "node-sass --output-style compressed -o dist/css src/scss",
    "css:postcss": "npx postcss dist/css/*.css --use autoprefixer -d dist/css",
    "deploy": "npm run build && node deploy",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm run build && run-p serve watch:*",
    "watch:conf": "onchange \"src/conf\" -- npm run build:conf",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:html": "onchange \"src/html\" -- npm run build:html",
    "watch:images": "onchange \"src/img\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development && npm run copy:js",
    "watch:txt": "onchange \"src/txt\" -- npm run build:txt"
  },
  "author": "nathan beach",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "copyfiles": "^2.4.0",
    "eslint": "^7.11.0",
    "eslint-loader": "^4.0.2",
    "ftp-deploy": "^2.3.8",
    "htmlnano": "^0.2.6",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "posthtml": "^0.13.3",
    "posthtml-cli": "^0.7.7",
    "posthtml-modules": "^0.6.2",
    "stylelint": "^13.7.2",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.0.1",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.1.0"
  }
}
